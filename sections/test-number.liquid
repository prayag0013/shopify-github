{% schema %}
{
  "name": "Test Number",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "To Do Things Well To Inspire People's Daily Lives And Stimulate Meaningful Experiences, Generating Value And Satisfaction."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "More than numbers, what defines [Company Name] is the constant effort to increasingly make people's lives better. The small blacksmith's shop founded by [Founders' Names] in 1911, in the heart of [Location], was the origin of a group that today is a manufacturing hub and global leader in the complex world of designing with simple gestures."
    }
  ],
  "blocks": [
    {
      "type": "stat",
      "name": "Stat Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "value",
          "label": "Stat Value",
          "default": "1911"
        },
        {
          "type": "text",
          "id": "label",
          "label": "Stat Label",
          "default": "Founding"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Test Number",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="company-stats">
  <div class="container">
    <h2>{{ section.settings.heading }}</h2>
    <p>{{ section.settings.description }}</p>
    <div class="stats-grid">
      {% for block in section.blocks %}
        {% if block.type == 'stat' %}
          <div class="stat-item">
            <img src="{{ block.settings.icon | img_url: '100x100' }}" alt="{{ block.settings.label }}">
            <h3>{{ block.settings.value }}</h3>
            <p>{{ block.settings.label }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>
